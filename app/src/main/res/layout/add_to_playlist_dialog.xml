<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/nueva_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableStart="@drawable/ic_plus_black_24dp"
        android:drawableLeft="@drawable/ic_plus_black_24dp"
        android:gravity="center_vertical"
        android:drawablePadding="24dp"
        android:background="?attr/selectableItemBackground"
        android:text="@string/nueva_playlist_addto" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_playlist_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_below="@+id/nueva_playlist" />

    <TextView
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/recyclerview_playlist_dialog"
        android:text="@string/cancelar_addto"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />


</RelativeLayout>